{
  "name": "green-handbook",
  "version": "1.0.0",
  "description": "観葉植物についての情報発信。",
  "main": "index.js",
  "scripts": {
    "link": "(cd ../publisher && npm run build && npm link)",
    "build": "rm -rf dist && npm link publisher && NODE_OPTIONS='--max-old-space-size=8192' webpack --mode production",
    "dev": "rm -rf dist && npm link publisher && static -p 8000 ./dist & NODE_OPTIONS='--max-old-space-size=8192' webpack -w --mode development",
    "dev:publisher": "(cd ../publisher && npm link) && nodemon -w ../publisher/dist -x publisher",
    "sample": "npm link publisher && node index.js",
    "start": "npm link publisher && publisher"
  },
  "keywords": [],
