{
  "name": "green-handbook",
  "version": "1.0.0",
  "description": "緑色手帖",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "pre": "(cd ../yggdrasil && npm run build)",
    "link": "(cd ../yggdrasil && npm link) && npm link yggdrasil",
    "yggdrasil:dev": "npm run link && nodemon -w ../yggdrasil/dist -x yggdrasil",
    "start": "npm run clean && npm run link && npm run build:scripts && npm run copy:images && concurrently 'npm run build:scripts:watch' 'npm run bundle:scripts:watch' 'npm run server:dev'",
    "build": "npm run clean && concurrently 'npm run build:scripts' 'NODE_ENV=production npm run bundle:scripts'",
    "compress:images": "node cli/compress-images.js",
    "copy:images": "cpx './assets/**/*' ./dist/assets",
    "build:scripts": "tsc -p tsconfig.prod.json",
    "build:scripts:watch": "tsc -w -p tsconfig.json",
    "bundle:scripts": "webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "server": "NODE_PATH=dist node ./dist/server/index.js",
    "server:dev": "NODE_PATH=dist nodemon -w ./dist -w ../yggdrasil/dist -x node ./dist/server/index.js",
    "lint": "eslint '{src/**/,cli/**/,}*.{ts,tsx,js,jsx,json}'",
    "lint:fix": "eslint --fix '{src/**/,cli/**/,}*.{ts,tsx,js,jsx,json}'",
    "check": "npx npm-check-updates"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/express": "4.17.0",
    "@types/fs-extra": "8.0.0",
    "@types/imagemin": "6.0.0",
    "@types/imagemin-jpegtran": "5.0.0",
    "@types/imagemin-pngquant": "7.0.0",
    "@types/node": "12.6.2",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/react-helmet": "5.0.8",
    "@types/react-intl": "2.3.18",
    "@types/react-redux": "7.1.1",
    "@types/react-router-dom": "4.3.4",
    "@types/redux-thunk": "2.1.0",
    "@types/styled-components": "4.1.18",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "concurrently": "4.1.1",
    "cpx": "1.5.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "imagemin": "7.0.0",
    "imagemin-jpegtran": "6.0.0",
    "imagemin-pngquant": "8.0.0",
    "imagemin-webp": "5.1.0",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "typescript": "3.5.3",
    "webpack": "4.35.3",
    "webpack-cli": "3.3.5",
    "webpack-manifest-plugin": "2.0.4"
  },
  "dependencies": {
    "@loadable/component": "5.10.1",
    "axios": "0.19.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
